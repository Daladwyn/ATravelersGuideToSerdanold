<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <noscript>You need to activate JavaScript to get this page to work.</noscript>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("A Travelers Guide to Serdan", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        @*using (Ajax.BeginForm("Index", "NPC", new AjaxOptions
                            {
                                UpdateTargetId = "Contentbody",
                                InsertionMode = InsertionMode.Replace
                            }))
                            {
                                <div>
                                    <input type="button" class="btn btn-default" value="Npc"/>
                                </div>
                            }*@

                        @Html.ActionLink("Npcs", "NpcIndex", "NPC")
                    </li>

                    <li>@Html.ActionLink("Planets", "PlanetIndex", "Planets")</li>

                    <li>@Html.ActionLink("Countries", "CountryIndex", "Country")</li>

                    <li>@Html.ActionLink("Cities", "CityIndex", "City")</li>
                    <li>
                        <form class="navbar-form navbar-left" action="/action_page.php">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Sök efter NPC, Planet, land el stad">
                            </div>
                            <button type="submit" class="btn btn-default">Sök</button>
                        </form>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" id="ContentBody">
        @RenderBody()


        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Christian Levin</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
