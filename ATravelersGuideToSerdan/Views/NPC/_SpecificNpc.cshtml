<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-2">
        @using (Ajax.BeginForm("GetStats", "NPC", new AjaxOptions
        {
            UpdateTargetId = "NpcDetails",
            InsertionMode = InsertionMode.Replace
        }))
        {
            <input type="submit" value="Stats" />
            @Html.HiddenFor(n => Model.NpcId)
        }
    </div>
    <div class="col-md-2">
        @using (Ajax.BeginForm("GetApperance", "NPC", new AjaxOptions
        {
            UpdateTargetId = "NpcDetails",
            InsertionMode = InsertionMode.Replace
        }))
        {
            <input type="submit" value="Uppträdande" />
